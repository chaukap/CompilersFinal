%option outfile="program1_lex.cpp"
%option noyywrap

%x COMMENT_STATE
%x CPLUSCOMMENT_STATE
%x ERROR_STATE

%{
#include<stdio.h>
#include "tokens.hpp"
int row = 1;
int column = 1;
int lastLength = 0;
int errorCount = 0;
%}

%%

[0-9]+	{
    column += lastLength;
    lastLength = yyleng;
	return NUMBER;
	}

==	{
    column += lastLength;
    lastLength = yyleng;
	return EQ;
	}

!=	{
    column += lastLength;
    lastLength = yyleng;
	return NEQ;
	}

>	{
    column += lastLength;
    lastLength = yyleng;
	return GT;
	}

\<   {
    column += lastLength;
    lastLength = yyleng;
	return LT;
	}

>=	    {
    column += lastLength;
    lastLength = yyleng;
	return GEQ;
	}

\<=	{
    column += lastLength;
    lastLength = yyleng;
	return LEQ;
	}

&&  {
    column += lastLength;
    lastLength = yyleng;
	return AND;
	}

\|\|    {
    column += lastLength;
    lastLength = yyleng;
	return OR;
    }

!   {
    column += lastLength;
    lastLength = yyleng;
	return NOT;
    }

\+    {
    column += lastLength;
    lastLength = yyleng;
	return PLUS;
    }

-    {
    column += lastLength;
    lastLength = yyleng;
	return MINUS;
    }

\*    {
    column += lastLength;
    lastLength = yyleng;
	return TIMES;
    }

\/    {
    column += lastLength;
    lastLength = yyleng;
	return DIV;
    }

\%  {
    column += lastLength;
    lastLength = yyleng;
	return MOD;
    }

;	{
    column += lastLength;
    lastLength = yyleng;
	return SEMI;
	}

=   {
    column += lastLength;
    lastLength = yyleng;
	return ASSIGN;
    }

\.	{
    column += lastLength;
    lastLength = yyleng;
	return DOT;
	}

void	{
    column += lastLength;
    lastLength = yyleng;
	return VOID;
	}

class	{
    column += lastLength;
    lastLength = yyleng;
	return CLASS;
	}

new	{
    column += lastLength;
    lastLength = yyleng;
	return NEW;
	}

print   {
    column += lastLength;
    lastLength = yyleng;
	return PRINT;
    }

read   {
    column += lastLength;
    lastLength = yyleng;
	return READ;
    }

return   {
    column += lastLength;
    lastLength = yyleng;
	return RETURN;
    }

else   {
    column += lastLength;
    lastLength = yyleng;
	return ELSE;
    }

null   {
    column += lastLength;
    lastLength = yyleng;
	return NULLT;
    }

this   {
    column += lastLength;
    lastLength = yyleng;
	return THIS;
    }

if   {
    column += lastLength;
    lastLength = yyleng;
	return IF;
    }

while   {
    column += lastLength;
    lastLength = yyleng;
	return WHILE;
    }

int {
    column += lastLength;
    lastLength = yyleng;
	return INT;
    }

[a-zA-Z_][_0-9a-zA-Z]*	{
    column += lastLength;
    lastLength = yyleng;
	return IDENT;
	}

\n	{
    column = 1;
    lastLength = 0;
	row++;
	return IGNORE;
	}

" " {
    column += lastLength;
    lastLength = yyleng;
	return IGNORE;
	}

\t	{
    column += lastLength;
    lastLength = 8 - (column % 8);
	return IGNORE;
	}

\{  {
    column += lastLength;
    lastLength = yyleng;
	return LBRACE;
    }

\}  {
    column += lastLength;
    lastLength = yyleng;
	return RBRACE;
    }

\)  {
    column += lastLength;
    lastLength = yyleng;
	return RPAREN;
    }

\(  {
    column += lastLength;
    lastLength = yyleng;
	return LPAREN;
    }

\[   {
    column += lastLength;
    lastLength = yyleng;
	return LBRACK;
    }

\]  {
    column += lastLength;
    lastLength = yyleng;
	return RBRACK;
    }

,   {
    column += lastLength;
    lastLength = yyleng;
	return COMMA;
    }

.	{
    errorCount++;
    unput(yytext[0]);
    BEGIN(ERROR_STATE);
    if(errorCount > 20){
        return ERRORS;
    }
	return IGNORE;
	}

<ERROR_STATE>.    {
    column += lastLength;
    lastLength = yyleng;
    BEGIN(0);
    return ER_CH;
    }    

<ERROR_STATE>.[0-9a-zA-Z_]*   {
    column += lastLength;
    lastLength = yyleng;
    BEGIN(0);
    return ER_WD;
    }

\/\/  {
    column += lastLength;
    lastLength = 0;
    BEGIN(CPLUSCOMMENT_STATE);
    return COMMENT;
    }

<CPLUSCOMMENT_STATE>. {
    return IGNORE;
    }

<CPLUSCOMMENT_STATE>\n {
    column = 1;
    row++;
    BEGIN(0);
    return IGNORE;
    }

\/\* {
    column += lastLength;
    lastLength = yyleng;
    BEGIN(COMMENT_STATE);
    return IGNORE;
    }

<COMMENT_STATE>. {
    column += lastLength;
    lastLength = yyleng;
    return IGNORE;
    }

<COMMENT_STATE>\n    {
    column = 1;
    lastLength = 0;
	row++;
	return IGNORE;
    }

<COMMENT_STATE>\*\/  {
    column += lastLength;
    lastLength = yyleng;
	BEGIN(0);
    return IGNORE;
    }

%%
