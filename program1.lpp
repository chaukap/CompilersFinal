%option outfile="program1_lex.cpp"
%option noyywrap

%{
#include<stdio.h>
extern int row;
%}

INTEGER	[0-9]+
FLOAT1	[0-9]*\.[0-9]+
FLOAT2	[0-9]*\.[0-9]+[Ee][\+\-]?[0-9]+
FLOAT3	[0-9]+[Ee][\+\-]?[0-9]+
COMPARE	==|<|>|<<|>>|>=|<=|!=
LOGIC	\|\||\&\&
MATH	\+|\-|\/|\*
ENCLOSE	\{|\}|\[|\]|\(|\)
PUNCT	\.|\,|\;|\:
KEYWORD	this|if|else|while
IDENT	[a-zA-Z_][_0-9a-zA-Z]*
NEWLINE	\n
SPACE	" "
TAB		\t
UNRECOGNIZED	.

%%

{INTEGER}	{
	return 8;
	}

{FLOAT1}|{FLOAT2}|{FLOAT3}	{
	return 9;
	}

{LOGIC}	{
	return 2;
	}

{COMPARE}	{
	return 1;
	}

{MATH}	{
	return 3;
	}

{ENCLOSE}	{
	return 4;
	}

{PUNCT}	{
	return 5;
	}

{KEYWORD}	{
	return 6;
	}

{IDENT}	{
	return 7;
	}

{NEWLINE}	{
	row++;
	return 11;
	}

{SPACE}	{
	return 12;
	}

{TAB}	{
	return 13;
	}

{UNRECOGNIZED}	{
	return 10;
	}

%%
